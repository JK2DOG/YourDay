<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/buttom_toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y100"
    android:layout_alignParentBottom="true"
    android:gravity="center"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/compile"
        android:layout_width="@dimen/y100"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/y10"
        android:src="@drawable/icon_compile"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/input"
        android:layout_width="@dimen/y100"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/y10"
        android:src="@drawable/icon_uninput"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/location"
        android:layout_width="@dimen/y100"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/y10"
        android:src="@drawable/icon_location_on"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/clear"
        android:layout_width="@dimen/y100"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/y10"
        android:src="@drawable/icon_back"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/photo"
        android:layout_width="@dimen/y100"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/y10"
        android:src="@drawable/icon_photo"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/y110"
        android:gravity="center"
        android:src="@drawable/icon_setup"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/del"
        android:layout_width="@dimen/y100"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/y10"
        android:src="@drawable/icon_del"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/save"
        android:layout_width="@dimen/y100"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/y10"
        android:src="@drawable/icon_save"
        android:visibility="gone" />


</LinearLayout>
